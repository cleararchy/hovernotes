{
  "name": "crossref-notes",
  "displayName": "CrossRef Notes",
  "description": "Show hover popups for numbered notes cross-referenced in code comments (e.g., //note#10)",
  "version": "0.0.1",
   "license": "ISC",
   "publisher": "SriramN",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./src/extension.js",
  "contributes": {    
    "configuration": {
      "type": "object",
      "title": "CrossRef Notes Configuration",
      "properties": {
        "crossref-notes.notesFile": {
          "type": "string",
          "default": "private_notes.md",
          "description": "Path to the markdown file containing numbered notes."
        },
        "crossref-notes.maxNoteLines": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of lines to display for a note."
        },
        "crossref-notes.crossRefPrefix": {
          "type": "string",
          "default": "n",
          "description": "Prefix string to match for note cross-references (e.g., n#, note#, note:, etc.). Don't inlcude the # or : suffix. That's automatic."
        }
      }
    }
  },
  "files": [
    "src",
    "package.json",
    "README.md",
    "screenshot4readme.png",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "vitest run",
    "start": "node src/extension.js"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "vitest": "^1.0.0"
  },
  "type": "module",
  "activationEvents": [
     "onStartupFinished",
    "onLanguage:plaintext",
    "onHover"
  ],
 "repository": {
    "type": "git",
    "url": "https://github.com/cleararchy/hovernotes.git"
  }
}
